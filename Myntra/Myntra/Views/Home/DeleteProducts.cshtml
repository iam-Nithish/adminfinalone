

@model IEnumerable<Myntra.Models.Product>
@{
    ViewBag.Title = "DeleteProducts";
    Layout = "~/Views/Admin_LayoutPage1.cshtml";
}








<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Description</th>
            <th>Image</th>
            <th>Category</th>
            <th>Status</th>
            <th>Color</th>
            <th>Brand</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
                <td>@product.ProductDescription</td>
                <td><img src="@product.ProductImage" alt="@product.ProductName" width="50" height="50" /></td>
                <td>@product.Category</td>
                <td>@product.Status</td>
                <td>@product.Color</td>
                <td>@product.Brand</td>
                <td>
                    @Html.ActionLink("Edit", "EditProduct", new { id = product.ProductID }) |
                    @Html.ActionLink("DeleteProducts", "Home", new { id = product.ProductID }, new { onclick = "return confirm('Are you sure you want to delete this product?');" })
                </td>
            </tr>
        }

        
    </tbody>
</table>
